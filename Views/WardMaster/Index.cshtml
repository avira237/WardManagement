@model WM.Models.WARDMASTER
@{ ViewBag.Title = "Index"; }
<html>
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/WardMaster.css" />

</head>
<body>
    <div class="body">
        <form class="form-inline" id="frmWardMaster" name="frmWardMaster">
            <div class="c1">
                <h6>WARD MASTER INFORMATION</h6>
            </div>
            <div class="container container1">
                <input type="hidden" id="ID" name="ID" />
                <div class="row row1">
                    <div class="col-md-12 col-sm-12 border border-dark  p-3 mt-2">
                        <div class="form-group input-group">
                            <div class="col-1">
                            </div>
                            <lable id="lbl" class="col-3 d-flex justify-content-end"> WARD NAME : </lable>
                            <input type="text" title="Only Alphabet Allowed" placeholder="WARD NAME" class="form-control col-6" id="Wardname" name="Wardname" style="width:300px;" /><br />
                        </div>
                        <div class="container con">
                            <div class="row">
                                <div class="col-md-12">
                                    <button class="btn btn-success b2" id="btnsave" name="btnsave">
                                        <i class="fa fa-check-circle" aria-hidden="true"></i>
                                        Save
                                    </button>
                                    <button class="btn btn-outline-secondary b2" id="btnload" name="btnload">
                                        <i class="fa fa-spinner fa-spin" aria-hidden="true"></i>
                                        Loading
                                    </button>
                                    <button class="btn btn-success b2" id="btnedit" name="btnedit" onclick="EditData();">
                                        <i class="fa fa-check" aria-hidden="true"></i>
                                        Update
                                    </button>
                                    <button class="btn b1" type="reset" id="btnreset">
                                        <i class="fa fa-undo" aria-hidden="true"></i>
                                        Reset
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="container-fluid dtborder" style="width: 75%;height:100%; margin: auto;margin-top: 20px;margin-bottom: 20px;padding: 10px;padding-bottom:10px;padding-right:10px;text-align: center;">
            <table id="WMtbl" class=" table-striped table-bordered cell-border order-columnn  table-responsive-md table-responsive-sm nowrap" style="width:100%;margin:auto;">
                <thead>
                    <tr>
                        <th>ACTIONS</th>
                        <th>WARDNAME</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <link rel="stylesheet" href="~/css/CSS_datatable.css" />
    <link rel="stylesheet" href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" />   
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>    
    <script src="~/Scripts/DataTables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/pagination.js"></script>
    <script src="~/Scripts/WardMaster/Index.js"></script>
</body>
</html>